@model Tuple<IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>, IEnumerable<string>>

<h1>Assign Role</h1>

<form asp-action="AssignRole">
    <div class="form-group">
        <label for="userId">User</label>
        <select class="form-control" id="userId" name="userId">
            @foreach (var user in Model.Item1)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="roleName">Role</label>
        <select class="form-control" id="roleName" name="roleName">
            @foreach (var role in Model.Item2)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>
